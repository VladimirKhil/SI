<UserControl
    x:Class="SIQuester.View.PointAnswerTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:SIQuester.ViewModel;assembly=SIQuester.ViewModel"
    mc:Ignorable="d"
    xmlns:lp="clr-namespace:SIQuester.Properties"
    d:DataContext="{d:DesignInstance vm:PointAnswerViewModel}">
    <UserControl.Resources>
        <Style x:Key="SelectPointButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Setter Property="Foreground" Value="#555555" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
        <TextBox
            Text="{Binding Answer, UpdateSourceTrigger=PropertyChanged}"
            Width="80"
            Margin="0,0,5,0"
                        Padding="3"
            Style="{StaticResource CommonTextBox}"
            Background="Honeydew"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"
            IsReadOnly="True" />
        <TextBlock Text="&#x00B1;" VerticalAlignment="Center" Margin="0,0,2,0" Foreground="Black" />
        <TextBox
            Text="{Binding Deviation, UpdateSourceTrigger=PropertyChanged}"
            Width="40"
            Style="{StaticResource CommonTextBox}"
            Margin="0,0,5,0"
                        Padding="3"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Center"
            IsReadOnly="True"
            Background="#F3F3F3" />
        <Button
            Command="{Binding SelectPoint}"
            VerticalAlignment="Center"
            Style="{StaticResource SelectPointButtonStyle}"
            Width="25"
            Height="25"
            ToolTip="{x:Static lp:Resources.SelectPointHint}">
            <Path Stretch="Uniform" Margin="3" Data="{Binding Source={StaticResource app_edit},Path=Data}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
        </Button>
    </StackPanel>
</UserControl>
