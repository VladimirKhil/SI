<UserControl
    x:Class="SIQuester.View.NumericAnswerTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c="clr-namespace:SIQuester"
    xmlns:vm="clr-namespace:SIQuester.ViewModel;assembly=SIQuester.ViewModel"
    xmlns:vmp="clr-namespace:SIQuester.ViewModel.Properties;assembly=SIQuester.ViewModel"
    xmlns:lp="clr-namespace:SIQuester.Properties"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance vm:NumericAnswerViewModel}">
    
    <UserControl.Resources>
        <Style TargetType="{x:Type c:NumericTextBox}">
            <Setter Property="Minimum" Value="-999999" />
            <Setter Property="Maximum" Value="999999" />
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="24" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="Normal" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,2,0,0">
        <c:NumericTextBox Text="{Binding Answer, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="{x:Static lp:Resources.Deviation}" Margin="5,0,5,2" />

        <c:NumericTextBox 
            Text="{Binding Deviation, UpdateSourceTrigger=PropertyChanged}"
            ToolTip="{x:Static lp:Resources.AnswerDeviation}"
            Minimum="0" />
    </StackPanel>
</UserControl>